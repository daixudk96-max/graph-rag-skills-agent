# ============================================
# GraphRAG Skills Agent - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# === OpenAI / LLM API ===
OPENAI_API_KEY=your_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini
TEMPERATURE=0
MAX_TOKENS=2000

# === Neo4j Database ===
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_MAX_POOL_SIZE=10
NEO4J_REFRESH_SCHEMA=false

# === ATOM Temporal Knowledge Graph ===
# Enable ATOM for temporal KG extraction (default: false)
ATOM_ENABLED=false
# Entity extraction confidence threshold
ATOM_ENTITY_THRESHOLD=0.5
# Relationship extraction confidence threshold  
ATOM_RELATION_THRESHOLD=0.5
# Max parallel workers for ATOM extraction
ATOM_MAX_WORKERS=4

# === Text Processing ===
CHUNK_SIZE=500
CHUNK_OVERLAP=100
MAX_TEXT_LENGTH=500000

# === Performance ===
MAX_WORKERS=4
BATCH_SIZE=100
ENTITY_BATCH_SIZE=50
EMBEDDING_BATCH_SIZE=64

# === Server ===
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_RELOAD=false

# === Frontend ===
FRONTEND_API_URL=http://localhost:8000
FRONTEND_DEFAULT_AGENT=naive_rag_agent
FRONTEND_USE_STREAM=true

# === Multi-Agent Settings ===
MA_PLANNER_MAX_TASKS=6
MA_WORKER_EXECUTION_MODE=sequential
MA_AUTO_GENERATE_REPORT=true

# === Search Settings ===
NAIVE_SEARCH_TOP_K=3
LOCAL_SEARCH_TOP_CHUNKS=3
LOCAL_SEARCH_TOP_COMMUNITIES=3
GLOBAL_SEARCH_LEVEL=0

# === Cache Settings ===
CACHE_DIR=./cache
CACHE_MEMORY_ONLY=false
CACHE_ENABLE_VECTOR_SIMILARITY=true
CACHE_SIMILARITY_THRESHOLD=0.9
